{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@util": ["src/util"],
      "@util/*": ["src/util/*"],
      "@com/*": ["src/components/*"],
      "@store" : ["src/store"],
      "@store/*" : ["src/store/*"],
      "@config" : ["src/config"],
      "@style/*" : ["src/assets/style"],
      "@img/*" : ["src/assets/img"],
      "@view" : ["src/view"],
      "@view/*" : ["src/view/*"],
    }
  },
  "include": [
    "src/global.d.ts",
    "src"
  ]
}
